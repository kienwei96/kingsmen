<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Kingsman</title>
    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/asset/css/login.css">
  </head>
  <body>
    <!-- ====== TOP HEADER BAR ====== -->
    <div class="header">
      <!-- title -->
      <div class="header-title">
        <img src="/public/img/logo.png" alt="kingsman logo">
        <h1>KINGSMAN TAILOR</h1>
      </div>
      <!-- navigation -->
      <div class="header-nav">
        <ul>
          <li>
              <a href="/">Home</a>
          </li>
        </ul>
      </div>
    </div>
    <!-- ===== MAIN SPLASH PAGE CONTENT ===== -->
    <div class="main">
        <div class="login-page">
            <div class="form">
              <form class="login-form" action="/sessions" method="POST">
                <input type="text" id="username" name="username" placeholder="Username" >
                <input type="password" id="password" name="password" placeholder="Password">
                <% if(!validation) { %>
                  <p>Wrong Username or Password</p>
                <% } %>
                <input type="submit" value="Login"></input>
                <p class="message">Not registered? <a href="/">Create an account</a></p>
              </form>
            </div>
          </div>
    </div>
  </body>
</html>
